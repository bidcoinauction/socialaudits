  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const deck = document.getElementById('deck');
      const nativeW = 1366, nativeH = 768;

      function scale(){
        const s = Math.min(window.innerWidth/nativeW, window.innerHeight/nativeH);
        deck.style.transform = `scale(${s})`;
      }
      window.addEventListener('resize', scale);
      scale();

      const slides = Array.from(document.querySelectorAll('.slide'));
            let i = 0;

      function show(idx){
        slides.forEach(s => s.classList.remove('active'));
        slides[idx].classList.add('active');
                                i = idx;
      }

            
      
      // Keyboard navigation (robust space support)
      document.addEventListener('keydown', (e) => {
        const key = e.key;
        const isNext = (key === 'ArrowRight' || key === 'PageDown' || key === ' ' || key === 'Spacebar' || key === 'Space');
        const isPrev = (key === 'ArrowLeft' || key === 'PageUp');
        if (isNext) {
          e.preventDefault();
          if(i < slides.length - 1) show(i + 1);
        }
        if (isPrev) {
          e.preventDefault();
          if(i > 0) show(i - 1);
        }
      });

      // Click / tap anywhere to advance (except when selecting text)
      deck.addEventListener('click', (e) => {
        // Ignore clicks on selectable text elements if user is highlighting
        const sel = window.getSelection ? window.getSelection().toString() : "";
        if (sel && sel.length > 0) return;
        if(i < slides.length - 1) show(i + 1);
      });

      show(0);

    });
  </script>
</body>
